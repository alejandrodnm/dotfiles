	excludesfile = /Users/adonascimento/.gitignore_global
	pager = diff-so-fancy | less --tabs=4 -RFX
[pull]
	rebase = false
[rebase]
	autosquash = true
[interactive]
	diffFilter = diff-so-fancy --patch
[color]
	ui = true
